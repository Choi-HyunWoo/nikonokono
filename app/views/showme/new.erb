<div class="container" style="margin-top:40px;">
  <form action="/showme/create" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      제목: <input type="text" name="title" class="form-control" placeholder="제목을 입력하세요">
    </div>

    <div class="form-group">
      Youtube Url: <input type="text" name="video_url" class="form-control" placeholder="링크를 입력하세요">
    </div>

    <div class="form-group">
      내용: <textarea class="form-control" name="content" rows="5" placeholder="내용을 입력하세요"></textarea>
    </div>

    <div class="form-group">
      가수: <input type="text" name="singer" class="form-control" placeholder="가수를 입력하세요">
    </div>

    <div class="form-group">
      노래제목: <input type="text" name="song" class="form-control" placeholder="노래제목을 입력하세요">
    </div>

    <button type="submit" class="btn btn-default" style="margin-top:10px;"> 전송 </button>
  </form>
</div>

<hr>
